---
import { Image } from 'astro:assets'
import miFoto from '@assets/img/mi-foto.png'
---

<section class="hero my-24">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-24 lg:grid-cols-2">
      
      <!-- TEXTO -->
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-center text-6xl md:text-left lg:text-8xl">
          <span class="text-gradient">PORTAFOLIO</span><br />
          Einny Camyla Poveda Garcia
        </h1>

        <!-- REDES SOCIALES -->
        <div class="flex gap-4 mt-6">
          
          <a 
            href="#" 
            class="social-btn instagram"
            target="_blank"
          >
            <i class="fab fa-instagram"></i>
          </a>

          <a 
            href="#" 
            class="social-btn linkedin"
            target="_blank"
          >
            <i class="fab fa-linkedin"></i>
          </a>

          <a 
            href="#" 
            class="social-btn github"
            target="_blank"
          >
            <i class="fab fa-github"></i>
          </a>

        </div>
      </div>

      <!-- IMAGEN -->
      <div class="hidden lg:block p-3 rounded-3xl bg-gradient-to-tr from-purple-500 to-pink-500 shadow-2xl">
        <Image
          class="rounded-2xl object-cover w-[450px] h-[500px]"
          src={miFoto}
          alt="Foto de Einny Camyla"
          width={450}
          height={500}
          loading="eager"
        />
      </div>

    </div>
  </div>
</section>

<style lang="scss">
  h1 {
    text-wrap: unset;
  }

  .text-gradient {
    background: linear-gradient(
      315deg,
      light-dark(var(--color-primary-300), var(--color-secondary-100)) 25%,
      light-dark(var(--color-secondary-300), var(--color-primary-200))
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 55px;
    height: 55px;
    border-radius: 14px;
    font-size: 22px;
    color: white;
    transition: 0.3s ease;
  }

  .instagram {
    background: linear-gradient(45deg, #f58529, #dd2a7b, #8134af);
  }

  .linkedin {
    background: #0077b5;
  }

  .github {
    background: #24292e;
  }

  .social-btn:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 25px rgba(0,0,0,0.3);
  }
</style>
